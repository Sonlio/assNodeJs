<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/css-site/style.css">
    <link rel="stylesheet" href="/css/css-site/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>FORGOT PASSWORD</title>
</head>
<body>
    
    <%- include('../layout/header') %>

     <!-- LOGIN -->
    <section class="login">
        <div class="bg-login"></div>
       <div class="box-login">
            <div class="title-login">
                <h3>Forgot password</h3>
            </div>

            <div class="body-login">
                <form action="/account/forgot-password" method="post" class="login-form">
                    <div class="form-group">
                        <span class="icon"><i class="fa-sharp fa-solid fa-paper-plane"></i></span>
                        <input class="form-control" type="email" required placeholder="Vui lòng nhập email để nhận mã OTP!" name="email">
                    </div>

                    <% if(typeof message !== 'undefined' ) { %>
                        <span class="err-input"><%= message %></span>
                    <% } %>
                   
                    <div class="btn">
                        <button type="submit" class="btn-forgot-pass">Xác nhận</button>
                    </div>
                </form>
            </div>
       </div>
    </section>

    <%- include('../layout/footer') %>
</body>
</html>