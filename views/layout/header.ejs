<!-- TOP HEADER -->
<section class="header">
    <div class="welcome">
        <p>Welcome to Bookstore</p>
    </div>
    <div class="search">
        <div class="input-field">
            <form action="/products/search" method="post">
                <button class="btn-search" ><i class="fa-solid fa-magnifying-glass"></i></button>
                <input class="input-search" type="text" name="search" placeholder="Tìm kiếm" required>
            </form>
        </div>
        <div id="data-search"></div>
    </div>
    <div class="authentication">
        <% if(user) { %>
            <span class="name-user-login">Hello baby: <%= user.fullName%> <i class="fa-sharp fa-solid fa-circle-chevron-down"></i>
                <ul>
                    <li><a class="logout" href="/account/logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a></li>
                    <li><a class="change-password" href="/account/change-password"><i class="fa-solid fa-pen-to-square"></i> Change password</a></li>
                    
                <% if(user.typeUser === 1) { %>
                    <li><a href="/admin"><i class="fa-solid fa-screwdriver-wrench"></i> Admin</a></li>
                <% }  %>
                
                <% } else { %>
                    <li><a class="link" href="/account/register" class="link-register">Register</a></li>
                    <li><a class="link" href="/account/login" class="link-login">Login</a></li>
                </ul>
            </span>
         
        <% } %>
    </div>
</section>

<!-- MENU -->
<header>
    <div class="header-menu">
        <div class="logo">
            <a href="/"><h2>Evo<span>Book</span></h2></a>
        </div>
        <div class="main-menu">
            <ul>
                <li><a class="link active" href="/">Home</a></li>
                <li><a class="link" href="/about">About</a></li>
                <li><a class="link" href="/contact">Contact</a></li>
            </ul>
        </div>
        <div class="shopping-cart">
            <!-- <img src="http://www.theme-oxygen.com/envato/evobook/preview/html/images/basket.png" alt="Icon-cart"> -->
        </div>
    </div>
</header>

<script>
    const links = document.querySelectorAll('.link');
    const curHref = window.location.href;
    links.forEach(link => {
        link.classList.remove('active');
        if(link.href === curHref) {
            link.classList.add('active');
        }
    })
</script>