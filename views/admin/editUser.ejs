<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Edit Product</title>
	<link href="/css/css-admin/bootstrap.min.css" rel="stylesheet">
	<link href="/css/css-admin/font-awesome.min.css" rel="stylesheet">
	<link href="/css/css-admin/datepicker3.css" rel="stylesheet">
	<link href="/css/css-admin/styles.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	
	<!--Custom Font-->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
</head>
<body>

    <%- include('../layout/headerAdmin') %>
    
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/">
					<em class="fa fa-home"></em>
				</a></li>
				<li>Edit User</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Edit User</h1>
			</div>
		</div><!--/.row-->

		<!-- FORM -->
		<div class="form-insert-product">
            <% const {fullName, email, phoneNumber, address, typeUser} = user %>
			<form action="/admin/editUser" method="post" class="login-form">
				<div class="form-group">
					<input class="form-control-insert readonly" readonly type="text" placeholder="Full Name" name="fullName" value="<%= fullName %>">
				</div>
				<div class="form-group">
					<input class="form-control-insert readonly" readonly type="email" placeholder="Email" name="email" value="<%= email %>">
				</div>
				<div class="form-group">
					<input class="form-control-insert readonly" readonly type="text" placeholder="Phone Number" name="phoneNumber" value="<%= phoneNumber %>">
				</div>
				<div class="form-group">
					<input class="form-control-insert readonly" readonly type="text" placeholder="Address" name="address" value="<%= address %>">
				</div>
				<div class="form-group">
					<select class="form-control-insert" name="typeUser">
                        <option value="1" <%= typeUser == 1 ? 'selected' : '' %> >Admin</option>
                        <option value="0" <%= typeUser == 0 ? 'selected' : '' %> >Member</option>
                    </select>
				</div>
	
				<div class="btn-insert-product">
					<button type="submit">Cập nhật</button>
				</div>
			</form>
		</div>
	</div>	<!--/.main-->
		
</body>
</html>